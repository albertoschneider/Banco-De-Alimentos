<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ShapeAppearance_BDA_Rounded12" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="BDA_TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="shapeAppearance">@style/ShapeAppearance_BDA_Rounded12</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance_BDA_Rounded12</item>

        <!-- Fallback de raio -->
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>

        <!-- Contraste -->
        <item name="boxBackgroundColor">@android:color/white</item>
        <item name="boxStrokeColor">@color/box_stroke_colors</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>

        <!-- Cores que já são selectors -->
        <item name="hintTextColor">@color/hint_text_colors</item>
        <item name="helperTextTextColor">@color/hint_text_colors</item>

        <!-- Tints e contadores: agora como @color/... -->
        <item name="endIconTint">@color/bda_icon_tint</item>
        <item name="startIconTint">@color/bda_icon_tint</item>
        <item name="counterTextColor">@color/bda_counter_text</item>
        <item name="counterOverflowTextColor">@color/bda_counter_overflow_text</item>
    </style>

    <style name="BDA_EditText">
        <item name="android:textColor">#111827</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColorHint">@color/hint_text_colors</item>
    </style>

</resources>