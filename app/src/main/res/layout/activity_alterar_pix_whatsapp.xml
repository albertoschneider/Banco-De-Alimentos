<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- HEADER (mesmo padrão que você mandou: seta 16dp, título central) -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#F4B400"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingBottom="8dp">

            <ImageButton
                android:id="@+id/btn_voltar"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:contentDescription="@string/sem_descricao"
                android:scaleType="fitCenter"
                android:src="@drawable/left_arrow"
                app:tint="#000000" />

            <TextView
                android:id="@+id/tvTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Alterar PIX e WhatsApp"
                android:textColor="#004E7C"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>

    <!-- CONTEÚDO (sem fundo colorido, card branco clean) -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Títulos exatamente como na referência -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dados PIX"
                        android:textStyle="bold"
                        android:textColor="#111111"
                        android:textSize="16sp"
                        android:paddingBottom="8dp" />

                    <!-- INPUTS OUTLINED ARREDONDADOS (iguais à 1ª imagem) -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxStrokeColor="#E0E0E0"
                        app:boxStrokeWidth="1dp"
                        app:boxBackgroundColor="#FFFFFF"
                        app:hintEnabled="false">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPixNome"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Banco de Alimentos"
                            android:textColor="#111111"
                            android:textColorHint="#9E9E9E"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:inputType="textPersonName" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <Space android:layout_width="0dp" android:layout_height="12dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxStrokeColor="#E0E0E0"
                        app:boxStrokeWidth="1dp"
                        app:boxBackgroundColor="#FFFFFF"
                        app:hintEnabled="false">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPixCidade"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Porto Alegre - RS"
                            android:textColor="#111111"
                            android:textColorHint="#9E9E9E"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:inputType="textCapWords" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <Space android:layout_width="0dp" android:layout_height="12dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxStrokeColor="#E0E0E0"
                        app:boxStrokeWidth="1dp"
                        app:boxBackgroundColor="#FFFFFF"
                        app:hintEnabled="false">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPixChave"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="CPF/CNPJ/email/celular/aleatória"
                            android:textColor="#111111"
                            android:textColorHint="#9E9E9E"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:inputType="textVisiblePassword" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <Space android:layout_width="0dp" android:layout_height="16dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Contato WhatsApp"
                        android:textStyle="bold"
                        android:textColor="#111111"
                        android:textSize="16sp"
                        android:paddingBottom="8dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxStrokeColor="#E0E0E0"
                        app:boxStrokeWidth="1dp"
                        app:boxBackgroundColor="#FFFFFF"
                        app:hintEnabled="false">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etWhats"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="51999998888"
                            android:textColor="#111111"
                            android:textColorHint="#9E9E9E"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:inputType="phone" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/tvWhatsHint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Aceita colar com +55, espaços, parênteses e traços — o app limpa automaticamente."
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:paddingTop="6dp" />

                    <Space android:layout_width="0dp" android:layout_height="16dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSalvar"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Salvar alterações"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        app:cornerRadius="12dp"
                        app:backgroundTint="#F4B400"
                        android:textColor="#004E7C" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
