<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    android:background="#F5F6FA"
    tools:context=".pagamento">

    <!-- HEADER amarelo (mesma estrutura do Pontos de Coleta, sem busca) -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="56dp"
        android:background="#F4B400"
        android:orientation="vertical"
        android:clipToPadding="true"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="32dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

                        <ImageButton
                android:id="@+id/btn_voltar"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:contentDescription="@string/sem_descricao"
                android:scaleType="fitCenter"
                android:src="@drawable/arrow_back_png" />

                        <TextView
                android:id="@+id/tvTitulo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/btn_voltar"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="16dp"
                android:gravity="center"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Pagamento"
                android:textColor="#004E7C"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>

    <!-- CONTEÚDO SCROLLÁVEL -->
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/btnVoltarMenu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="14dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvValorTotalLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Valor da doação"
                        android:textColor="#6B778C"
                        android:textSize="14sp"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/tvTotalValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="R$ 50,00"
                        android:textStyle="bold"
                        android:textSize="26sp"
                        android:textColor="#1B1F3B"
                        android:layout_marginTop="2dp"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/tvPixTitulo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pague com Pix para confirmar"
                        android:textColor="#202020"
                        android:textSize="14sp"
                        android:layout_marginTop="16dp"
                        android:layout_gravity="center"/>

                    <LinearLayout
                        android:id="@+id/timerBlock"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="8dp"
                        android:gravity="center_horizontal">

                        <TextView
                            android:id="@+id/tvPixExpiraLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Expira em"
                            android:textColor="#6B778C"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvCountdown"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10:00"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="#1B1F3B"
                            android:layout_marginTop="2dp" />

                        <ProgressBar
                            android:id="@+id/timeProgress"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="6dp"
                            android:layout_marginTop="8dp"
                            android:max="600"
                            android:progress="600"
                            android:indeterminate="false"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="12dp">

                        <ImageView
                            android:id="@+id/ivQrCode"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:contentDescription="QRCode do PIX"
                            android:scaleType="fitCenter"
                            android:src="@android:drawable/ic_menu_report_image"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvPixOuChave"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ou use a chave Pix Copia e Cola:"
                        android:textColor="#202020"
                        android:textSize="14sp"
                        android:layout_marginTop="16dp"
                        android:layout_gravity="center"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <EditText
                            android:id="@+id/etPixKey"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_edit_rounded"
                            android:hint="Chave Pix"
                            android:padding="12dp"
                            android:textColor="#1B1F3B"
                            android:textColorHint="#9AA4B2"
                            android:singleLine="true"
                            android:focusable="false"
                            android:clickable="false"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/btnCopyPix"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <ImageButton
                            android:id="@+id/btnCopyPix"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="8dp"
                            android:background="@android:color/transparent"
                            android:contentDescription="Copiar chave PIX"
                            android:src="@drawable/ic_content_copy"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/etPixKey"
                            app:layout_constraintBottom_toBottomOf="@+id/etPixKey"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnGerarNovoPix"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:layout_marginTop="12dp"
                        android:text="Gerar novo PIX"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:visibility="gone"
                        app:backgroundTint="#EF4444"
                        app:cornerRadius="14dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnVoltarMenu"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_margin="16dp"
        android:text="Voltar ao Menu"
        android:textAllCaps="false"
        android:textColor="#004E7C"
        android:textStyle="bold"
        app:backgroundTint="#FFF1B100"
        app:cornerRadius="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
