<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    android:background="#F2F5F9">

    <!-- HEADER NOVO (padrão MaterialCardView) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="4dp"
        android:backgroundTint="#F4B400"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageButton
                    android:id="@+id/btn_voltar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_back_button"
                    android:contentDescription="@string/sem_descricao"
                    android:padding="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/arrow_back_png"
                    app:tint="#004E7C" />

                <TextView
                    android:id="@+id/tvTitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Editar Ponto de Coleta"
                    android:textColor="#004E7C"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />
            </RelativeLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="12dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="16dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@+id/bottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Nome do ponto -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nome do ponto"
                    app:placeholderText="Ex: Sede da Associação"
                    app:boxBackgroundMode="outline"
                    app:boxBackgroundColor="#FFFFFF"
                    app:boxStrokeColor="#C9D2E0"
                    app:boxStrokeWidth="1dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etNome"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/bg_textfield_outline_12dp"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:textColor="#1A1D29"
                        android:textSize="15sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="12dp" />

                <!-- Rua -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Rua"
                    app:placeholderText="Ex: Rua das Flores"
                    app:boxBackgroundMode="outline"
                    app:boxBackgroundColor="#FFFFFF"
                    app:boxStrokeColor="#C9D2E0"
                    app:boxStrokeWidth="1dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etRua"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/bg_textfield_outline_12dp"
                        android:inputType="textPostalAddress"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:textColor="#1A1D29"
                        android:textSize="15sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="12dp" />

                <!-- Número e Bairro -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <!-- Número -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Número"
                        app:placeholderText="123"
                        app:boxBackgroundMode="outline"
                        app:boxBackgroundColor="#FFFFFF"
                        app:boxStrokeColor="#C9D2E0"
                        app:boxStrokeWidth="1dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etNumero"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:background="@drawable/bg_textfield_outline_12dp"
                            android:inputType="number"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:textColor="#1A1D29"
                            android:textSize="15sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <Space
                        android:layout_width="8dp"
                        android:layout_height="match_parent" />

                    <!-- Bairro -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:hint="Bairro"
                        app:placeholderText="Ex: Centro"
                        app:boxBackgroundMode="outline"
                        app:boxBackgroundColor="#FFFFFF"
                        app:boxStrokeColor="#C9D2E0"
                        app:boxStrokeWidth="1dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etBairro"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:background="@drawable/bg_textfield_outline_12dp"
                            android:inputType="textPostalAddress"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:textColor="#1A1D29"
                            android:textSize="15sp" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="12dp" />

                <!-- APENAS CIDADE (largura total) - REMOVIDO CEP E ESTADO -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Cidade"
                    app:placeholderText="Ex: Porto Alegre"
                    app:boxBackgroundMode="outline"
                    app:boxBackgroundColor="#FFFFFF"
                    app:boxStrokeColor="#C9D2E0"
                    app:boxStrokeWidth="1dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etCidade"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/bg_textfield_outline_12dp"
                        android:inputType="textPostalAddress"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:textColor="#1A1D29"
                        android:textSize="15sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="12dp" />

                <!-- Latitude / Longitude (ocultos - apenas para backend) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:visibility="gone">

                    <!-- Latitude -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Latitude"
                        app:placeholderText="Auto"
                        app:boxBackgroundMode="outline"
                        app:boxBackgroundColor="#FFFFFF"
                        app:boxStrokeColor="#C9D2E0"
                        app:boxStrokeWidth="1dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etLatitude"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:enabled="false"
                            android:focusable="false"
                            android:background="@drawable/bg_textfield_outline_12dp"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:textColor="#1A1D29"
                            android:textSize="15sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <Space
                        android:layout_width="8dp"
                        android:layout_height="match_parent" />

                    <!-- Longitude -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Longitude"
                        app:placeholderText="Auto"
                        app:boxBackgroundMode="outline"
                        app:boxBackgroundColor="#FFFFFF"
                        app:boxStrokeColor="#C9D2E0"
                        app:boxStrokeWidth="1dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etLongitude"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:enabled="false"
                            android:focusable="false"
                            android:background="@drawable/bg_textfield_outline_12dp"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:textColor="#1A1D29"
                            android:textSize="15sp" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- CAMPOS OCULTOS PARA BACKEND (Estado e CEP ainda existem, mas invisíveis) -->
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etEstado"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="gone" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etCep"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="gone" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="8dp" />

                <!-- Erro -->
                <TextView
                    android:id="@+id/tvErro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Não encontramos esse endereço. Verifique os campos."
                    android:textColor="#D92D20"
                    android:textSize="13sp"
                    android:visibility="gone" />

                <!-- Link manual (oculto) -->
                <TextView
                    android:id="@+id/tvLinkManual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Coordenadas não encontradas? Colar manualmente"
                    android:textColor="#1F3A8A"
                    android:textSize="13sp"
                    android:clickable="true"
                    android:focusable="true"
                    android:visibility="gone" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="16dp" />

                <!-- Disponibilidade -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Disponibilidade"
                    android:textColor="#3B4256"
                    android:textSize="14sp"
                    android:layout_marginBottom="6dp" />

                <Spinner
                    android:id="@+id/spDisponibilidade"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_spinner_outline_12dp" />
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:padding="12dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Cancelar"
            android:textAllCaps="false"
            android:backgroundTint="#E5E7EB"
            android:textColor="#111827" />

        <Space
            android:layout_width="12dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/btnSalvar"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Salvar alterações"
            android:textAllCaps="false"
            android:enabled="false"
            android:backgroundTint="#9CA3AF"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>