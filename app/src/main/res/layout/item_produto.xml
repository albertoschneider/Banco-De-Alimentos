<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Card do produto -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:background="@android:color/white"
        android:elevation="3dp"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Imagem do produto + quantidade -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <ImageView
                android:id="@+id/imgProduto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:contentDescription="Imagem do produto"
                android:scaleType="centerInside"
                tools:src="@drawable/doe_alimentos_online" />

            <!-- Badge de quantidade -->
            <TextView
                android:id="@+id/tvQuantidade"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="top|end"
                android:layout_margin="6dp"
                android:background="@drawable/bg_badge_quantidade"
                android:gravity="center"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                tools:text="2" />
        </FrameLayout>

        <!-- Nome do produto -->
        <TextView
            android:id="@+id/tvNomeProduto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Arroz Branco" />

        <!-- Preço -->
        <TextView
            android:id="@+id/tvPrecoProduto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="Valor: R$0,00"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <!-- Botões de quantidade -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnMenos"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@android:color/transparent"
                android:contentDescription="Diminuir quantidade"
                android:src="@drawable/ic_remove"
                app:tint="@android:color/holo_red_dark" />

            <ImageButton
                android:id="@+id/btnMais"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@android:color/transparent"
                android:contentDescription="Aumentar quantidade"
                android:src="@drawable/ic_add"
                app:tint="@android:color/holo_green_dark" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
