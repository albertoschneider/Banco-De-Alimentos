<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="14dp"
    app:cardUseCompatPadding="true"
    app:strokeColor="#E6E6E6"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp">

        <!-- Linha título + distância -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvNome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mercado Central"
                android:textColor="#1B1B1B"
                android:textStyle="bold"
                android:textSize="16sp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipDistancia"
                style="@style/Widget.Material3.Chip.Assist.Elevated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="—"
                app:chipCornerRadius="12dp"
                app:chipMinHeight="32dp"
                app:chipIconVisible="false" />
        </LinearLayout>

        <!-- Endereço -->
        <TextView
            android:id="@+id/tvEndereco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="IV - Av. Presidente Lucena, 230"
            android:textColor="#5F6B74"
            android:textSize="13sp" />

        <!-- Disponibilidade (opcional) -->
        <TextView
            android:id="@+id/tvDisponibilidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Disponível Terça"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="#1B8A4B"
            android:visibility="gone" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVerRota"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Ver rota" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
