<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#004E7C"
    tools:context=".telalogin">

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/voltar"
        android:padding="6dp"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrow_back_png"
        app:tint="#FFFFFF" />



    <!-- Bloco central -->
    <LinearLayout
        android:id="@+id/centerBlock"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        app:layout_constraintBottom_toTopOf="@id/footerBlock"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp">

        <!-- LOGO quadrada, sem contorno -->
        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:adjustViewBounds="true"
            android:contentDescription="Logo"
            android:scaleType="fitCenter"
            android:src="@drawable/logoinicio"
            app:tint="#FFFFFF" />

        <!-- E-mail -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilEmail"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            app:boxBackgroundColor="#FFFFFF"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxStrokeWidth="0dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColor="#000000"
                android:textColorHint="#9EB9D4"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Senha -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilSenha"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:boxBackgroundColor="#FFFFFF"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxStrokeWidth="0dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtSenha"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Senha"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:textColorHint="#9EB9D4"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Entrar (amarelo, pill) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEntrar"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="14dp"
            android:text="Entrar"
            android:textAllCaps="false"
            android:textColor="#004E7C"
            android:textStyle="bold"
            app:backgroundTint="#FFF1B100"
            app:cornerRadius="26dp" />

        <!-- Entrar com Google (branco, pill) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGoogle"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="10dp"
            android:text="Entrar com Google"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="#1F2937"
            app:cornerRadius="26dp"
            app:icon="@drawable/google_g_png"
            app:iconTint="@null"
            app:iconSize="24dp"
            app:iconPadding="10dp"
            app:iconGravity="textStart"
            android:backgroundTint="#FFFFFF"/>

        <!-- Esqueci minha senha -->
        <TextView
            android:id="@+id/txtForgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Esqueci minha senha"
            android:textSize="12sp"
            android:textColor="#CFE3F6"
            android:clickable="true"
            android:focusable="true"
            android:padding="6dp"/>
    </LinearLayout>

    <!-- Rodapé -->
    <LinearLayout
        android:id="@+id/footerBlock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="14dp">

        <TextView
            android:id="@+id/txtNoAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Não tem uma conta? "
            android:textSize="12sp"
            android:textColor="#CFE3F6"/>

        <TextView
            android:id="@+id/txtRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registre-se"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:clickable="true"
            android:focusable="true"
            android:padding="2dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
