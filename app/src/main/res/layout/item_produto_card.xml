<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardCornerRadius="12dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="2dp"
    app:strokeWidth="1dp"
    app:strokeColor="#E5E7EB">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- espaço para imagem -->
        <ImageView
            android:id="@+id/ivFoto"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_image_placeholder"/>

        <!-- nome do produto -->
        <TextView
            android:id="@+id/tvNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Nome do Produto"
            android:textColor="#0F172A"
            android:textStyle="bold"
            android:textSize="14sp"/>

        <!-- pílula de quantidade -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/bg_qty_pill"
            android:gravity="center"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnMenos"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/bg_qty_circle"
                android:src="@drawable/ic_remove"
                android:contentDescription="@string/sem_descricao"/>

            <TextView
                android:id="@+id/tvQtd"
                android:layout_width="36dp"
                android:layout_height="28dp"
                android:gravity="center"
                android:text="0"
                android:textStyle="bold"
                android:textColor="#111827"
                android:textSize="14sp"/>

            <ImageButton
                android:id="@+id/btnMais"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/bg_qty_circle"
                android:src="@drawable/ic_add"
                android:contentDescription="@string/sem_descricao"/>
        </LinearLayout>

        <!-- preço -->
        <TextView
            android:id="@+id/tvPreco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="R$ 0,00"
            android:textColor="#1E3A8A"
            android:textStyle="bold"
            android:textSize="14sp"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>