<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_login"
    tools:context=".telaregistro">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="32dp">

            <!-- Botão Voltar -->
            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_back_button"
                android:contentDescription="Voltar"
                android:padding="12dp"
                android:scaleType="centerInside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/arrow_back_png"
                app:tint="#FFFFFF" />

            <!-- Card branco centralizado -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardRegister"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="12dp"
                app:layout_constraintTop_toBottomOf="@id/btn_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="32dp">

                    <!-- Logo Container -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center_horizontal"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="4dp"
                        android:backgroundTint="#004E7C">

                        <ImageView
                            android:id="@+id/logo_image"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            android:contentDescription="Logo"
                            android:scaleType="fitCenter"
                            android:src="@drawable/logoinicio"
                            app:tint="#FFFFFF" />
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Título e Subtítulo -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:text="Banco de Alimentos"
                        android:textColor="#004E7C"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="4dp"
                        android:text="Uma ação empresarial pela cidadania\nRegião do Calçado - RS"
                        android:textColor="#64748B"
                        android:textSize="11sp"
                        android:gravity="center"
                        android:lineSpacingExtra="2dp" />

                    <!-- Título Registro -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="32dp"
                        android:text="Crie sua conta"
                        android:textColor="#1E293B"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="6dp"
                        android:text="Junte-se a nós nesta missão solidária"
                        android:textColor="#64748B"
                        android:textSize="14sp"
                        android:gravity="center" />

                    <!-- Campo Nome -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="28dp"
                        android:text="Nome completo"
                        android:textColor="#475569"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_username"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxStrokeColor="@color/text_input_box_stroke"
                        app:boxStrokeWidth="2dp"
                        app:hintEnabled="false">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="João Silva"
                            android:inputType="textPersonName"
                            android:textColor="#1E293B"
                            android:textSize="15sp"
                            android:padding="14dp"
                            android:background="@drawable/bg_input_field" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Campo E-mail -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="E-mail"
                        android:textColor="#475569"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_email"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxStrokeColor="@color/text_input_box_stroke"
                        app:boxStrokeWidth="2dp"
                        app:hintEnabled="false">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="seu@email.com"
                            android:inputType="textEmailAddress"
                            android:textColor="#1E293B"
                            android:textSize="15sp"
                            android:padding="14dp"
                            android:background="@drawable/bg_input_field" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Campo Senha -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Senha"
                        android:textColor="#475569"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_password"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxStrokeColor="@color/text_input_box_stroke"
                        app:boxStrokeWidth="2dp"
                        app:hintEnabled="false"
                        app:endIconMode="password_toggle"
                        app:endIconTint="#64748B">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="••••••••"
                            android:inputType="textPassword"
                            android:textColor="#1E293B"
                            android:textSize="15sp"
                            android:padding="14dp"
                            android:background="@drawable/bg_input_field" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Use pelo menos 6 caracteres"
                        android:textColor="#64748B"
                        android:textSize="12sp" />

                    <!-- Campo Confirmar Senha -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Confirmar senha"
                        android:textColor="#475569"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_confirm_password"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxStrokeColor="@color/text_input_box_stroke"
                        app:boxStrokeWidth="2dp"
                        app:hintEnabled="false"
                        app:endIconMode="password_toggle"
                        app:endIconTint="#64748B">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_confirm_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="••••••••"
                            android:inputType="textPassword"
                            android:textColor="#1E293B"
                            android:textSize="15sp"
                            android:padding="14dp"
                            android:background="@drawable/bg_input_field" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Mensagem de erro -->
                    <TextView
                        android:id="@+id/tvAuthErrorRegister"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="*Este E-mail já está sendo usado. Tente Fazer Login"
                        android:textColor="#DC2626"
                        android:textSize="13sp"
                        android:visibility="gone"
                        android:padding="12dp"
                        android:background="@drawable/bg_error_message" />

                    <!-- Botão Registrar -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_login"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="24dp"
                        android:text="Registrar-se"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:backgroundTint="@null"
                        android:background="@drawable/bg_button_primary"
                        app:cornerRadius="12dp"
                        android:elevation="4dp"
                        app:elevation="4dp" />

                    <!-- Divider -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="24dp">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="#E2E8F0" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ou"
                            android:textColor="#94A3B8"
                            android:textSize="14sp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="#E2E8F0" />
                    </LinearLayout>

                    <!-- Botão Google -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_google"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Registrar com Google"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:textColor="#475569"
                        android:textSize="15sp"
                        app:cornerRadius="12dp"
                        app:strokeColor="#E2E8F0"
                        app:strokeWidth="2dp"
                        app:backgroundTint="#FFFFFF"
                        app:icon="@drawable/google_g_png"
                        app:iconTint="@null"
                        app:iconSize="20dp"
                        app:iconPadding="12dp"
                        app:iconGravity="textStart"
                        android:foreground="?attr/selectableItemBackground"
                        android:elevation="0dp" />

                    <!-- Termos -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:text="Ao se registrar, você concorda com nossos\nTermos de Uso e Política de Privacidade"
                        android:textColor="#94A3B8"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:lineSpacingExtra="2dp" />

                    <!-- Link de login -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Já possui uma conta? "
                            android:textColor="#64748B"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_login_here"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Entre aqui"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="#004E7C"
                            android:clickable="true"
                            android:focusable="true"
                            android:padding="4dp"
                            android:background="?attr/selectableItemBackground" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>