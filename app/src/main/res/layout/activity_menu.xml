<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#004E7C">

    <!-- Header fixo no topo -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/userName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ademir Rodrigues"
            android:textColor="#4D4D4D"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/iconProfile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/iconprofile"
            android:padding="8dp" />

        <ImageView
            android:id="@+id/iconCart"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/groceriescar"
            android:padding="8dp" />
    </LinearLayout>

    <!-- Área scrollável para os cards -->
    <ScrollView
        android:id="@+id/scrollCards"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Conteúdo dentro do ScrollView deve ter 1 filho direto -->
        <LinearLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <!-- Card 1 -->
            <LinearLayout
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:background="@drawable/retangulo_arredondado_amarelo"
                android:orientation="horizontal"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@drawable/se_torne_um_volutario_real"
                    android:layout_gravity="center_vertical" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/titleCard1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pontos de Coleta"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/descCard1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Confira os pontos de coleta disponíveis perto de você"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:paddingTop="4dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Card 2 -->
            <LinearLayout
                android:id="@+id/card2"
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/retangulo_arredondado_amarelo"
                android:orientation="horizontal"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@drawable/doe_alimentos_online"
                    android:layout_gravity="center_vertical" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/titleCard2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Doe Alimentos Online"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/descCard2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Monte seu carrinho de alimentos e faça sua doação"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:paddingTop="4dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Card 3 -->
            <LinearLayout
                android:id="@+id/card3"
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/retangulo_arredondado_amarelo"
                android:orientation="horizontal"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@drawable/img_voluntario"
                    android:layout_gravity="center_vertical" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/titleCard3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Se torne um Voluntário"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/descCard3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Seja um voluntário e ajude o BARC!"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:paddingTop="4dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Card 4 -->
            <LinearLayout
                android:id="@+id/card4"
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/retangulo_arredondado_amarelo"
                android:orientation="horizontal"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@drawable/ic_pedidos"
                    android:layout_gravity="center_vertical" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/titleCard4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Histórico de Doações"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/descCard4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Veja o seu histórico de doações realizadas para o BARC!"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:paddingTop="4dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Espaço final para respirar ao fim da rolagem -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="24dp"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
