<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F5F9">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <!-- HEADER (mesma cor do fundo, sem borda/sombra e com tint nos ícones) -->
            <LinearLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="6dp"
                android:background="#F2F5F9">

                <ImageView
                    android:id="@+id/avatar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_circle_grey_200"
                    android:src="@drawable/ic_user_light"
                    android:padding="8dp"
                    android:contentDescription="@string/sem_descricao"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvWelcome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bem_vindo"
                        android:textColor="#9AA4AE"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nome_usuario"
                        android:textColor="#111827"
                        android:textStyle="bold"
                        android:textSize="20sp"/>
                </LinearLayout>

                <!-- Ícones do topo com tint para aparecerem -->
                <ImageButton
                    android:id="@+id/btnCart"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:padding="8dp"
                    android:src="@drawable/ic_cart_24"
                    android:contentDescription="@string/sem_descricao"
                    app:tint="#4B5563" />

                <ImageButton
                    android:id="@+id/btnSettings"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:padding="8dp"
                    android:src="@drawable/ic_settings_24"
                    android:contentDescription="@string/sem_descricao"
                    app:tint="#4B5563" />
            </LinearLayout>

            <!-- GRID 2x2: TODOS OS CARDS MESMA ALTURA (220dp) -->
            <LinearLayout
                android:id="@+id/grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical">

                <!-- Linha 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Pontos de Coleta -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardPontos"
                        android:layout_width="0dp"
                        android:layout_height="220dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:stateListAnimator="@animator/card_raise"
                        app:cardCornerRadius="18dp"
                        app:cardUseCompatPadding="true"
                        app:cardElevation="5dp"
                        app:strokeWidth="0dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:backgroundTint="#FFFFFF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="top"
                            android:padding="22dp">

                            <FrameLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/bg_circle_orange_100">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_pin_24"
                                    app:tint="#F59E0B" />
                            </FrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="14dp"
                                android:text="@string/pontos_coleta_titulo"
                                android:textColor="#111827"
                                android:textStyle="bold"
                                android:textSize="18sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="@string/pontos_coleta_subtitulo"
                                android:textColor="#6B7280"
                                android:textSize="15sp"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Doe Alimentos -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardDoe"
                        android:layout_width="0dp"
                        android:layout_height="220dp"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:stateListAnimator="@animator/card_raise"
                        app:cardCornerRadius="18dp"
                        app:cardUseCompatPadding="true"
                        app:cardElevation="5dp"
                        app:strokeWidth="0dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:backgroundTint="#FFFFFF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="top"
                            android:padding="22dp">

                            <FrameLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/bg_circle_green_100">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_bag_24"
                                    app:tint="#10B981" />
                            </FrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="14dp"
                                android:text="@string/doe_alimentos_titulo"
                                android:textColor="#111827"
                                android:textStyle="bold"
                                android:textSize="18sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="@string/doe_alimentos_subtitulo"
                                android:textColor="#6B7280"
                                android:textSize="15sp"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <!-- Espaço entre linhas -->
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="14dp"/>

                <!-- Linha 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Seja Voluntário -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardVoluntario"
                        android:layout_width="0dp"
                        android:layout_height="220dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:stateListAnimator="@animator/card_raise"
                        app:cardCornerRadius="18dp"
                        app:cardUseCompatPadding="true"
                        app:cardElevation="5dp"
                        app:strokeWidth="0dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:backgroundTint="#FFFFFF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="top"
                            android:padding="22dp">

                            <FrameLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/bg_circle_blue_100">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_hands_24"
                                    app:tint="#60A5FA"/>
                            </FrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="14dp"
                                android:text="@string/seja_voluntario_titulo"
                                android:textColor="#111827"
                                android:textStyle="bold"
                                android:textSize="18sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="@string/seja_voluntario_subtitulo"
                                android:textColor="#6B7280"
                                android:textSize="15sp"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Histórico -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardHistorico"
                        android:layout_width="0dp"
                        android:layout_height="220dp"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:stateListAnimator="@animator/card_raise"
                        app:cardCornerRadius="18dp"
                        app:cardUseCompatPadding="true"
                        app:cardElevation="5dp"
                        app:strokeWidth="0dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:backgroundTint="#FFFFFF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="top"
                            android:padding="22dp">

                            <FrameLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/bg_circle_purple_100">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_history_24"
                                    app:tint="#A78BFA" />
                            </FrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="14dp"
                                android:text="@string/historico_titulo"
                                android:textColor="#111827"
                                android:textStyle="bold"
                                android:textSize="18sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="@string/historico_subtitulo"
                                android:textColor="#6B7280"
                                android:textSize="15sp"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>