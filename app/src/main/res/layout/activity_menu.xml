<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    android:background="#004E7C">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="24dp">

            <!-- Header Simples -->
            <LinearLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvWelcome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bem_vindo"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:alpha="0.85"/>

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="@string/nome_usuario"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="22sp"/>
                </LinearLayout>

                <!-- Botão Settings -->
                <ImageButton
                    android:id="@+id/btnSettings"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/bg_icon_button"
                    android:padding="10dp"
                    android:src="@drawable/ic_settings_24"
                    android:contentDescription="@string/sem_descricao"
                    app:tint="#004E7C" />
            </LinearLayout>

            <!-- Card Carrinho Amarelo -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardCarrinho"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="16dp"
                app:cardUseCompatPadding="false"
                app:cardElevation="4dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:backgroundTint="#FFC107">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="18dp"
                    android:paddingBottom="18dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_cart_24"
                        android:contentDescription="@string/sem_descricao"
                        app:tint="#004E7C"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:text="Meu Carrinho"
                        android:textColor="#004E7C"
                        android:textStyle="bold"
                        android:textSize="18sp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Grid de Cards 2x2 Minimalista -->
            <LinearLayout
                android:id="@+id/grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="vertical">

                <!-- Linha 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false">

                    <!-- Pontos de Coleta -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardPontos"
                        android:layout_width="0dp"
                        android:layout_height="160dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="10dp"
                        app:cardCornerRadius="16dp"
                        app:cardUseCompatPadding="false"
                        app:cardElevation="3dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:backgroundTint="#FFFFFF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/ic_pin_24"
                                app:tint="#FFC107" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:text="@string/pontos_coleta_titulo"
                                android:textAlignment="center"
                                android:textColor="#004E7C"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="@string/pontos_coleta_subtitulo"
                                android:textAlignment="center"
                                android:textColor="#6B7280"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Doar Alimentos -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardDoe"
                        android:layout_width="0dp"
                        android:layout_height="160dp"
                        android:layout_weight="1"
                        android:layout_marginStart="10dp"
                        app:cardCornerRadius="16dp"
                        app:cardUseCompatPadding="false"
                        app:cardElevation="3dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:backgroundTint="#FFFFFF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/ic_bag_24"
                                app:tint="#004E7C" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:text="@string/doe_alimentos_titulo"
                                android:textAlignment="center"
                                android:textColor="#004E7C"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="@string/doe_alimentos_subtitulo"
                                android:textAlignment="center"
                                android:textColor="#6B7280"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <!-- Espaço entre linhas -->
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>

                <!-- Linha 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false">

                    <!-- Seja Voluntário -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardVoluntario"
                        android:layout_width="0dp"
                        android:layout_height="160dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="10dp"
                        app:cardCornerRadius="16dp"
                        app:cardUseCompatPadding="false"
                        app:cardElevation="3dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:backgroundTint="#FFFFFF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/ic_hands_24"
                                app:tint="#FFC107"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:text="@string/seja_voluntario_titulo"
                                android:textAlignment="center"
                                android:textColor="#004E7C"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="@string/seja_voluntario_subtitulo"
                                android:textAlignment="center"
                                android:textColor="#6B7280"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Meu Histórico -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardHistorico"
                        android:layout_width="0dp"
                        android:layout_height="160dp"
                        android:layout_weight="1"
                        android:layout_marginStart="10dp"
                        app:cardCornerRadius="16dp"
                        app:cardUseCompatPadding="false"
                        app:cardElevation="3dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:backgroundTint="#FFFFFF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/ic_history_24"
                                app:tint="#004E7C" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:text="@string/historico_titulo"
                                android:textAlignment="center"
                                android:textColor="#004E7C"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="@string/historico_subtitulo"
                                android:textAlignment="center"
                                android:textColor="#6B7280"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </LinearLayout>

            <!-- Rodapé -->
            <LinearLayout
                android:id="@+id/footerBrand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="32dp"
                android:paddingTop="20dp"
                android:paddingBottom="8dp">

                <ImageView
                    android:id="@+id/imgBrand"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="@string/sem_descricao"
                    android:src="@drawable/passarinho_barc"
                    app:tint="#FFC107" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="Banco de Alimentos da Região do Calçado"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>