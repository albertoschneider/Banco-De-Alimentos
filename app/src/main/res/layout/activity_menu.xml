<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A4E7C">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <!-- Header -->
            <LinearLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="6dp"
                android:background="@android:color/transparent">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvWelcome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bem_vindo"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nome_usuario"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="20sp"/>
                </LinearLayout>

                <!-- Somente configurações no topo -->
                <ImageButton
                    android:id="@+id/btnSettings"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:padding="8dp"
                    android:src="@drawable/ic_settings_24"
                    android:contentDescription="@string/sem_descricao"
                    app:tint="#FFFFFF" />
            </LinearLayout>

            <!-- Mini banner do Carrinho (sem bolinhas) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardCarrinho"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="16dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="0dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:backgroundTint="#12618F">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_cart_24"
                        android:contentDescription="@string/sem_descricao"
                        app:tint="#FFFFFF"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Carrinho"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="18sp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- GRID 2x2 -->
            <LinearLayout
                android:id="@+id/grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:orientation="vertical">

                <!-- Linha 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Pontos de Coleta -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardPontos"
                        android:layout_width="0dp"
                        android:layout_height="220dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:stateListAnimator="@animator/card_raise"
                        app:cardCornerRadius="18dp"
                        app:cardUseCompatPadding="true"
                        app:cardElevation="5dp"
                        app:strokeWidth="0dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:backgroundTint="#FFFFFF">

                        <!-- CENTRALIZADO -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="22dp">

                            <FrameLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/bg_circle_blue_100">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_pin_24"
                                    app:tint="#3B82F6" />
                            </FrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="14dp"
                                android:text="@string/pontos_coleta_titulo"
                                android:textAlignment="center"
                                android:textColor="#111827"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="2dp"
                                android:text="@string/pontos_coleta_subtitulo"
                                android:textAlignment="center"
                                android:textColor="#6B7280"
                                android:textSize="15sp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Doar Alimentos -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardDoe"
                        android:layout_width="0dp"
                        android:layout_height="220dp"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:stateListAnimator="@animator/card_raise"
                        app:cardCornerRadius="18dp"
                        app:cardUseCompatPadding="true"
                        app:cardElevation="5dp"
                        app:strokeWidth="0dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:backgroundTint="#FFFFFF">

                        <!-- CENTRALIZADO -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="22dp">

                            <FrameLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/bg_circle_orange_100">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_bag_24"
                                    app:tint="#F59E0B" />
                            </FrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="14dp"
                                android:text="@string/doe_alimentos_titulo"
                                android:textAlignment="center"
                                android:textColor="#111827"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="2dp"
                                android:text="@string/doe_alimentos_subtitulo"
                                android:textAlignment="center"
                                android:textColor="#6B7280"
                                android:textSize="15sp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <!-- Espaço entre linhas -->
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="14dp"/>

                <!-- Linha 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Seja Voluntário -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardVoluntario"
                        android:layout_width="0dp"
                        android:layout_height="220dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:stateListAnimator="@animator/card_raise"
                        app:cardCornerRadius="18dp"
                        app:cardUseCompatPadding="true"
                        app:cardElevation="5dp"
                        app:strokeWidth="0dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:backgroundTint="#FFFFFF">

                        <!-- CENTRALIZADO -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="22dp">

                            <FrameLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/bg_circle_green_100">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_hands_24"
                                    app:tint="#10B981"/>
                            </FrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="14dp"
                                android:text="@string/seja_voluntario_titulo"
                                android:textAlignment="center"
                                android:textColor="#111827"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="2dp"
                                android:text="@string/seja_voluntario_subtitulo"
                                android:textAlignment="center"
                                android:textColor="#6B7280"
                                android:textSize="15sp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Meu Histórico -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardHistorico"
                        android:layout_width="0dp"
                        android:layout_height="220dp"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:stateListAnimator="@animator/card_raise"
                        app:cardCornerRadius="18dp"
                        app:cardUseCompatPadding="true"
                        app:cardElevation="5dp"
                        app:strokeWidth="0dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:backgroundTint="#FFFFFF">

                        <!-- CENTRALIZADO -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="22dp">

                            <FrameLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/bg_circle_purple_100">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_history_24"
                                    app:tint="#A78BFA" />
                            </FrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="14dp"
                                android:text="@string/historico_titulo"
                                android:textAlignment="center"
                                android:textColor="#111827"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="2dp"
                                android:text="@string/historico_subtitulo"
                                android:textAlignment="center"
                                android:textColor="#6B7280"
                                android:textSize="15sp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </LinearLayout>

            <!-- Rodapé centralizado -->
            <LinearLayout
                android:id="@+id/footerBrand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="28dp"
                android:paddingBottom="8dp">

                <ImageView
                    android:id="@+id/imgBrand"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:contentDescription="@string/sem_descricao"
                    android:src="@drawable/passarinho_barc"
                    app:tint="#FFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Banco de Alimentos Regional"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
